{% extends 'layout.html.twig' %}

{% block title %}
	créer un alias
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/alias.css">
{% endblock %}

{% block content %}
	<main class="container sm main-content col-md-12 order-md-2 mt-5 align-self-md-center">
		<div class="container-md">
			<a href="/"><img class="decoration" src="/assets/images/logo.svg"></a>
			<h1 class="mt-md-5">choisis ton alias</h1>
			<img
			class="decoration" src="/assets/images/noun-frame-346217.svg">

			{# TODO : manage errors display #}
			<ul>
				{% for error in errors %}
					<li class="error">{{ error }}</li>
				{% endfor %}
			</ul>
			<form method="post" class="formAdmin">

				<p class="form-group">
					<label for="player_name">Alias</label>
					<input class="form-control" type="text" value="{{ alias.player_name }}" placeholder="ex : Gandalf" name="player_name" id="player_name" required>
				</p>

				<p>
					<button class="buttonAction raise">Commencer à jouer</button>
				</p>
			</form>
		</div>
	</main>
{% endblock %}
