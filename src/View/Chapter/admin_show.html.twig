{% extends 'layout.html.twig' %}

{% block content %}
<div class="admin">
    <h1>{{ chapter.id }} {{ chapter.name }}</h1>
    <p>Titre : {{ chapter.title }}</p>
    <p>Description : {{ chapter.description }}</p>
    <p>Image : {{ chapter.background_image }}</p>
    <p>Balise alt de l'image : {{ chapter.background_image_alt }}</p>
    
    <a href="/chapters/admin_edit?id={{ chapter.id }}">Modifier le chapitre</a>
    <a href="/chapters">Back</a>
</div>
{% endblock %}
