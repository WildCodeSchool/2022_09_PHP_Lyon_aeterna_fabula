{% extends 'layout.html.twig' %}

{% block title %}

	Chapitre
	{{ chapter.id }}

{% endblock %}

{% block content %}
	<main class="chapter d-md-inline-flex">
		<audio controls autoplay class="audioPage" src="/assets/sound/turnpage.mp3"></audio>
		<a class="logo" href="/"><img src="/assets/images/logo.svg"></a>
		<div class="d-md-none">
			<img class="MobileChapterImage" src="/assets/images/{{ chapter.background_image }}"></div>
		<div class="chapterPage ms-md-5">

			<p>Chapitre
				{{ chapter.id }}</p>
			<h1 class="chapterTitle">
				{{ chapter.title }}</h1>

			<p class="chapterText">
				{{ chapter.description }}</p>

			<a class="buttonAction raise" href="/chapter/show?id={{ chapter.id -1 }} ">	{{ action.label }} </a>

			<a class="buttonAction raise" href="/chapter/show?id={{ chapter.id +1 }} "> {{ action.label }} </a>

		</div>

		<div class="backgroundImage d-none d-md-block" style="background-image: url(/assets/images/{{chapter.background_image}});"></div>
	</main>
{% endblock %}
