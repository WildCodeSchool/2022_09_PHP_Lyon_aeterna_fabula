{% extends 'layout.html.twig' %}

{% block title %}

	Æterna Fabula

{% endblock %}

{% block stylesheet %}

	<link rel="stylesheet" href="/assets/css/home.css">

{% endblock %}

{% block content %}

	{% if user %}

		<section class="container-fluid">

			<div class="row">
				<div class="main-content order-md-2 mt-5">
					<h1 class="mt-md-5">
						<span class="initials">Æ</span>terna
						<span class="initials">F</span>abula</h1>
					<img src="/assets/images/noun-frame-346217.svg">
					<p>Bonjour
						{{ user.email }}<br>
						Bienvenue dans une histoire dont vous êtes le héros, l'héroine</p>
					<a href="/incipit">
						<button class="play-button">Jouer</button>
					</a>
				</div>
				<div class="order-md-1 mb-md-5">

					<div class="sign-links d-md-flex justify-content-end">
						{% if user.is_admin == 1 %}
							<div class="mx-3">
								<a href="/admin/admin_homepage">Administration</a>
							</div>
							<div class="mx-3 d-none d-md-block">|</div>
							<div class="mx-3 d-md-none"><img id="line" src="/assets/images/Vector_1.svg"></div>
							<div>
								<a href="/logout">Se déconnecter
								</a>
							</div>

						{% else %}
							<div>
								<a href="/logout">Se déconnecter
								</a>
							</div>
						{% endif %}

					</div>
				</div>
			</div>
		</section>

	{% else %}

		<section class="container-fluid">
			<div class="row">
				<div class="main-content order-md-2 mt-5">
					<h1 class="mt-md-5">
						<span class="initials">Æ</span>terna
						<span class="initials">F</span>abula</h1>
					<img src="/assets/images/noun-frame-346217.svg">
					<p>Une histoire dont vous êtes le héros, l'héroine</p>
					<a href="/login">
						<button class="play-button">Jouer</button>
					</a>
				</div>
				<div class="order-md-1 mb-md-5">
					<div class="sign-links d-md-flex justify-content-end">
						<div class="mx-3">
							<a href="/register">S'inscrire</a>
						</div>
						<div class="mx-3 d-none d-md-block">|</div>
						<div class="mx-3 d-md-none"><img id="line" src="/assets/images/Vector_1.svg"></div>
						<div>
							<a href="/login">Se connecter</a>
						</div>
					</div>
				</div>
			</div>
		</section>

	{% endif %}

{% endblock %}
