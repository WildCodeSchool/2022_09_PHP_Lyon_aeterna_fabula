{% extends 'layout.html.twig' %}

{% block title %}
	AF admin edit actions
{% endblock %}

{% block stylesheet %}
	<link rel="stylesheet" href="/assets/css/admin_index.css">
{% endblock %}


{% block content %}
	<section>
		<div class="container sm main-content col-md-12 order-md-2 mt-5 align-self-md-center"/>
		<a href="/"><img class="decoration" src="/assets/images/logo.svg"></a>
		<h1 class="mt-md-5">Liste des actions</h1>
		<img class="decoration" src="/assets/images/noun-frame-346217.svg">
		<a class="buttonAction raise" href="/actions/admin_add_action">Ajouter une action</a>
		<a class="buttonAction raise" href="/admin/admin_homepage">Retour au tableau de bord administrateur</a>
		<table class="table table-striped table-dark table-hover table-sm">
			<thead>
				<tr>
					<th scope="col">ID</th>
					<th scope="col">Libell√©</th>
					<th scope="col">Chapitre d'origine (ID)</th>
					<th scope="col">Chapitre vers (ID)</th>
				</tr>
			</thead>
			<tbody>
				{% for action in actions %}
					<tr>
						<th scope="row">{{ action.id }}
						</th>
						<td>
							{{ action.label }}
						</td>
						<td>
							{{ action.owner_id }}
						</td>
						<td>
							{{ action.target_id }}
						</td>
						<td>
							<a class="sign-links" href="/actions/admin_edit_action?id={{ action.id }}">Modifier l'action</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</section>{% endblock %}
